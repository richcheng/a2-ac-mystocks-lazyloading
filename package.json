{
  "name": "a2-ac-mystocks",
  "description": "Angular 2, Angular-cli, Bootstrap4, Angular-ui ng-bootstrap app",
  "author": {
    "name": "Rich Cheng",
    "email": "rich@richcheng.com",
    "url": "http://richcheng.com/"
  },
  "version": "0.0.1",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "FIXFIX": "webpack --progress --profile --colors --display-error-details --display-cached",
    "ng": "ng",
    "start": "ng serve",
    "lint": "tslint \"src/**/*.ts\" --project src/tsconfig.json --type-check && tslint \"e2e/**/*.ts\" --project e2e/tsconfig.json --type-check",
    "test": "ng test",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor",
    "build.prod": "ng build --prod --env=prod",
    "build.prod.aot": "ng build --prod --env=prod --aot",
    "aot": "ngc -p tsconfig-aot.json",
    "aotrollup": "ngc -p tsconfig-aot.json && rollup -c rollup-config.js",
    "clean": "rimraf dist",
    "clean-install": "rimraf node_modules dist && npm cache clean && npm install",
    "clean-start": "npm run clean-install && npm start",
    "dev": "npm run watch",
    "watch": "node ./node_modules/webpack/bin/webpack --watch --progress --profile --colors --display-error-details --display-cached",
    "build": "node ./node_modules/webpack/bin/webpack --progress --profile --colors --display-error-details --display-cached",
    "build:prod": "node ./node_modules/webpack/bin/webpack --progress --profile --colors --display-error-details --display-cached --optimize-occurence-order --optimize-minimize --optimize-dedupe",
    "build:run": "node ./node_modules/webpack/bin/webpack --progress --profile --colors --display-error-details --display-cached && cd ./build && npm install",
    "build:prod:run": "node ./node_modules/webpack/bin/webpack --progress --profile --colors --display-error-details --display-cached --optimize-occurence-order --optimize-minimize --optimize-dedupe && cd ./build && npm install",
    "wp:start": "webpack-dev-server --config webpack.aot.config.js",
    "wp:build": "rimraf dist && webpack --config webpack.aot.config.js -p",
    "wp:deploy": "gh-pages -d dist",
    "wp:jit": "webpack-dev-server --config webpack.jit.config.js",
    "wp:aot": "webpack-dev-server --config webpack.aot.config.js"    
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^2.4.8",
    "@angular/compiler": "^2.4.8",
    "@angular/core": "^2.4.8",
    "@angular/forms": "^2.4.8",
    "@angular/http": "^2.4.8",
    "@angular/platform-browser": "^2.4.8",
    "@angular/platform-browser-dynamic": "^2.4.8",
    "@angular/platform-server": "^2.4.8",
    "@angular/router": "^3.4.8",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-alpha.20",
    "@types/lodash": "^4.14.52",
    "angular2-jwt": "^0.1.28",
    "angularfire2": "^2.0.0-beta.7",
    "auth0-lock": "^10.11.0",
    "bootstrap": "^4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "firebase": "^3.6.6",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "ngx-toastr": "^4.2.1",
    "rxjs": "^5.0.1",
    "ts-helpers": "^1.1.1",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {    
    "@angular/cli": "^1.0.0-beta.33.1",
    "@angular/compiler-cli": "^2.4.8",
    "@types/jasmine": "2.5.43",
    "@types/node": "^7.0.5",
    "codelyzer": "~3.0.0-beta.0",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "3.2.0",
    "karma": "1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.6.0",
    "npm": "^4.1.2",
    "protractor": "~5.1.1",
    "ts-node": "2.1.0",
    "tslint": "^4.3.0",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1"
  }
}
